import java.util.Scanner;

public class JavaApplication76 {

    public static void binaryToDecimal(int decimal) {
        int store[] = new int[1000];
        int i = 0;
        int t = decimal;
        String out = "";
        while (t > 0) {
            store[i] = t % 2;
            t = t / 2;
            i++;

        }
        System.out.println("Binary Value is: ");
        for (int j = i - 1; j >= 0; j--) {
            System.out.print(store[j]);
        }
    }

    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        System.out.println("Enter The Number in Decimal");
        int inp= sc.nextInt();
        binaryToDecimal(inp);

    }

}
